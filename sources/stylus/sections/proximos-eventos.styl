.proximos-eventos{
    display none
    background-color #fff
    .container{
        padding 60px 0 80px 60px
    }
    .proximos-eventos-title {
        display inline-block
        vertical-align top
        background-image url("/assets/images/svgs/proximos-eventos.svg")
        background-position center 0
        background-repeat no-repeat
        background-size 50% auto
        width 530px
        height 0
        padding-top 204px
        overflow hidden
        margin 20px 0 0 0
    }
    .proximos-eventos-container {
        display inline-block
        vertical-align middle
    }
    .proximos-eventos-item {
        display inline-block
        vertical-align top
        width 265px
        margin 25px 0
    }
    .proximo-evento-date {
        font-family "PN-Black"
        font-size 44px
        text-transform uppercase
        display block
        color #242424
        &:after{
            display block
            content ''
            width 100px
            height 5px
            margin 12px 0 14px
            background-color #e8422f
        }
    }
    .proximo-evento-name {
        font-family "PN-ExtraBold"
        font-size 14px
        text-transform uppercase
        display block
        color #242424
        margin-bottom 12px
    }
    .proximo-evento-text {
        font-family "PN-SemiBold"
        font-size 12px
        display block
        color #444444
        margin-bottom 4px
        text-decoration none
    }
    .proximo-evento-link {
        text-decoration none
        font-family "PN-SemiBold"
        color #e8422f
        display block
        font-size 12px
        margin-top 6px
        font-style italic
    }
    .proximo-evento-comunidade {
        font-family "PN-SemiBold"
        font-size 12px
        display block
        color #e8422f
        margin-bottom 5px
    }
}
